<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-start">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">My Profile</h1>
          <p class="mt-2 text-sm text-gray-600">Manage your account information and view your activity.</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to edit_profile_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-lg flex items-center" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Profile
          <% end %>
        </div>
      </div>
    </div>

    <!-- Profile Information -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Personal Information</h3>
      </div>
      <div class="px-6 py-4">
        <div class="flex items-center space-x-6">
          <div class="flex-shrink-0">
            <div class="h-20 w-20 rounded-full bg-blue-100 flex items-center justify-center">
              <span class="text-2xl font-bold text-blue-600"><%= @user.full_name.first.upcase %></span>
            </div>
          </div>
          <div class="flex-1">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <dt class="text-sm font-medium text-gray-500">Full Name</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @user.full_name %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Email</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @user.email %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Phone</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @user.phone %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Member Since</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @user.created_at.strftime("%B %d, %Y") %></dd>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% if @employee %>
      <!-- Employee Information -->
      <div class="bg-white shadow rounded-lg mb-8">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Employee Information</h3>
        </div>
        <div class="px-6 py-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <dt class="text-sm font-medium text-gray-500">Employee ID</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @employee.employee_id %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Department</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @employee.department %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Position</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @employee.position %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Status</dt>
              <dd class="mt-1">
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                  <%= case @employee.status
                      when 'active' then 'bg-green-100 text-green-800'
                      when 'inactive' then 'bg-gray-100 text-gray-800'
                      when 'terminated' then 'bg-red-100 text-red-800'
                      when 'on_leave' then 'bg-yellow-100 text-yellow-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= @employee.status.humanize %>
                </span>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Hire Date</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @employee.hire_date.strftime("%B %d, %Y") %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Salary</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= number_to_currency(@employee.salary) if @employee.salary %></dd>
            </div>
          </div>

          <!-- Roles -->
          <% if @employee.roles.any? %>
            <div class="mt-6">
              <dt class="text-sm font-medium text-gray-500 mb-2">Roles</dt>
              <div class="flex flex-wrap gap-2">
                <% @employee.roles.each do |role| %>
                  <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full bg-blue-100 text-blue-800">
                    <%= role.name %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- My Transactions (if employee has any) -->
      <% if @recent_transactions.any? %>
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex justify-between items-center">
              <h3 class="text-lg font-medium text-gray-900">My Recent Transactions</h3>
              <%= link_to transactions_path(employee_id: @employee.id), class: "text-blue-600 hover:text-blue-900 text-sm font-medium" do %>
                View All
                <svg class="w-4 h-4 inline ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              <% end %>
            </div>
          </div>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Account</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @recent_transactions.each do |transaction| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= transaction.transaction_date.strftime("%b %d, %Y") %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                        <%= case transaction.transaction_type
                            when 'income' then 'bg-green-100 text-green-800'
                            when 'expense' then 'bg-red-100 text-red-800'
                            when 'loan' then 'bg-yellow-100 text-yellow-800'
                            when 'transfer_in' then 'bg-blue-100 text-blue-800'
                            when 'transfer_out' then 'bg-purple-100 text-purple-800'
                            else 'bg-gray-100 text-gray-800'
                            end %>">
                        <%= transaction.transaction_type.humanize %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= transaction.account.name %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= transaction.category.humanize %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium <%= transaction.income? ? 'text-green-600' : 'text-red-600' %>">
                      <%= transaction.income? ? '+' : '-' %><%= transaction.formatted_amount %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- No Employee Profile -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-8 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No Employee Profile</h3>
          <p class="mt-1 text-sm text-gray-500">You don't have an employee profile associated with your account.</p>
          <div class="mt-6">
            <p class="text-sm text-gray-500">Contact your administrator to set up your employee profile.</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
